<UserControl x:Class="WidgetExportingExample.Views.SampleWidgetThird"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WidgetExportingExample"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="0" Grid.Row="0" Background="Gray">Func1</Button>
        <Button Grid.Column="1" Grid.Row="0" Background="Orange">Func2</Button>
        <Button Grid.Column="0" Grid.Row="1" Background="Coral">Func3</Button>
        <Button Grid.Column="1" Grid.Row="1" Background="OrangeRed">Func4</Button>
    </Grid>
</UserControl>
