<UserControl x:Class="WidgetExportingExample.Views.ButtonPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:WidgetExportingExample.ViewModel"
             xmlns:local="clr-namespace:WidgetExportingExample"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:ButtonPanel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Background="{Binding FirstButtonColor}">Func1</Button>
        <Button Grid.Row="1" Background="{Binding SecondButtonColor}">Func2</Button>
        <Button Grid.Row="2" Background="{Binding ThirdButtonColor}">Func3</Button>
        <Button Grid.Row="3" Background="{Binding FourthButtonColor}">Func4</Button>
    </Grid>
</UserControl>
